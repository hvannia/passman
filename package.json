{
  "name": "passman-electron",
  "private": true,
  "version": "1.0.0",
  "main": "electron-dist/main.js",
  "scripts": {
    "start": "cd passman && npm run build && cd .. && tsc -p tsconfig.electron.json && electron .",
    "dist": "cd passman && npm run build && cd .. && tsc -p tsconfig.electron.json && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "argon2": "^0.41.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "electron": "^40.2.1",
    "electron-builder": "^26.0.12",
    "typescript": "~5.9.3"
  },
  "build": {
    "appId": "com.passman.app",
    "productName": "Passman",
    "files": [
      "electron-dist/**/*",
      "passman/dist/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "asarUnpack": [
      "**/node_modules/sqlite3/**",
      "**/node_modules/argon2/**"
    ]
  }
}
